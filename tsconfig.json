{
	"compilerOptions": {
	  "target": "ESNEXT",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "allowSyntheticDefaultImports": true
	},
	"include": ["./api/**/*"],
	"exclude": ["node_modules"]
  }
  